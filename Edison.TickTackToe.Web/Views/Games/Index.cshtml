@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/bundles/signalr")
    <script type="text/javascript" src="~/signalr/hubs"></script>
    <script type="text/javascript" src="~/Scripts/gamesentry.js"></script>
}
<div class="messageBox">
    <p id="mu" class="text-info"></p>
</div>
<div class="users">
    <h4 class="text-center">Users</h4>
    <table class="table table-hover" id="tableUsers" data-email="@ViewBag.Email" data-name="@HttpContext.Current.User.Identity.Name">
        <thead>
        <tr>
            <th>
                User name
            </th>
            <th>
                User status
            </th>
        </tr>
        </thead>
        <tbody></tbody>
        <tfoot></tfoot>
    </table>
</div>
<div class="game">
    <h2 class="text-center">
        <span class="contact text-info">
            <p id="mcontact"></p>
        </span>
        Playing field
    </h2>
    <br/>
</div>
